# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Order {
  id: ID!
  menuItems: [MenuItem!]!
  total: Int!
  orderStatus: OrderStatus!
}

type OrderStatus {
  id: ID!
  name: String!
}

extend type MenuItem @key(fields: "id") {
  id: ID! @external
  name: String! @external
  priceInCents: Int! @external
}

extend type Query {
  orders: [Order!]!
}

